<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Set windowActionBar to false to use a Toolbar instead of the action bar -->
        <item name="windowActionBar">false</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.Multigame" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Multigame.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Multigame.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Multigame.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="ConfirmTheme" parent="Theme.AppCompat.Light.Dialog.Alert"/>

    <style name="Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorPrimaryDark">@color/teal_400</item>
    </style>
</resources>